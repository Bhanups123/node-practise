<% include partials/header %>

<div class = "container background:black">
	<header class = jumbotron>
		<div class = "container">
			<h1>Welcome to Campgrounds!!</h1>
			<p>View our hand-picked great campgrounds</p>
			<p>
				<a class = "btn btn-primary btn-large" href = "/campgrounds/new">new campground</a>
			</p>
		</div>
	</header>

	<div class = 'row text-center' style = "display:flex; flex-wrap:wrap;">
		<% campgrounds.forEach(function(camps){ %>

			<div class = 'col-md-3 col-sm-6'>

				<div class = "thumbnail">
					<img src = "<%= camps.image %>">
					
					<div class = "caption">
						<h4> <%= camps.name %> </h4>
					</div>
				</div>

			</div>

		<% }); %>
	</div>
</div>

<% include partials/footer %>
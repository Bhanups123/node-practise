<% include Partials/header %>
<div class = "jumbotron" style = "text-align: center">
	<h4>Add New Blog</h4>
</div>
<div class = "container" style = "width:30%; margin: 0 auto">
<form action = "/blogs" method = "POST">
	<div class = "form-group">
		<input class = "form-control" name = "blog[title]" type = "text" placeholder = "title">
	</div>
	<div class = "form-group">
		<input class = "form-control" name = "blog[image]" type = "text" placeholder = "image">
	</div>
	<div class = "form-group">
		<input class = "form-control" name = "blog[body]" type = "text" placeholder = "body">
	</div>
	<div class = "form-group">
		<button class = "btn btn-primary btn-block">Submit</button>	
	</div>
</form>
</div>
<% include Partials/footer %>
